<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProctorLoginController">
   <children>
      <VBox alignment="CENTER" layoutX="200.0" layoutY="100.0" prefHeight="400.0" prefWidth="400.0" spacing="30.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="100.0">
         <children>
            <Label styleClass="title-label" text="Proctor Portal" />
            
            <VBox alignment="CENTER" prefHeight="250.0" prefWidth="400.0" spacing="20.0" styleClass="card">
               <children>
                  <Label styleClass="header-label" text="Login Required" />
                  <TextField fx:id="proctorIdField" promptText="Proctor ID" />
                  <PasswordField fx:id="proctorPasswordField" promptText="Password" />
                  <Label fx:id="messageLabel" textFill="#ff6b6b" />
                  <Button mnemonicParsing="false" onAction="#handleLogin" prefWidth="200.0" styleClass="action-button" text="Login" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleBack" styleClass="secondary-button" text="Back to Home" />
         </children>
      </VBox>
   </children>
</AnchorPane>
