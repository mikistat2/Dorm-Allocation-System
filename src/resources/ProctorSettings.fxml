<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProctorSettingsController">
   <children>
      <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #2b5876; -fx-text-fill: white; -fx-background-radius: 5;" text="&lt; Back to Dashboard" />
      <VBox alignment="CENTER" layoutX="200.0" layoutY="100.0" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <Label text="Dorm Configuration" textFill="#2b5876">
               <font>
                  <Font name="Segoe UI Bold" size="24.0" />
               </font>
            </Label>
            <VBox spacing="5.0">
               <children>
                  <Label text="Number of Buildings/Blocks" textFill="#888888" />
                  <TextField fx:id="numBuildingsField" promptText="e.g., 3" style="-fx-background-radius: 5; -fx-padding: 10;" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Number of Rooms per Block" textFill="#888888" />
                  <TextField fx:id="numRoomsField" promptText="e.g., 20" style="-fx-background-radius: 5; -fx-padding: 10;" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleSaveSettings" prefWidth="200.0" style="-fx-background-color: #4ecdc4; -fx-text-fill: white; -fx-background-radius: 20;" text="Save &amp; Initialize">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
            </Button>
            <Label fx:id="messageLabel" textFill="#2b5876" />
         </children>
      </VBox>
   </children>
</AnchorPane>
