<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProctorStudentsController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #2b5876; -fx-text-fill: white; -fx-background-radius: 5;" text="&lt; Back" />
                  <Label text="Student Allocation" textFill="#2b5876">
                     <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleAutoAssign" style="-fx-background-color: #4ecdc4; -fx-text-fill: white; -fx-background-radius: 5;" text="Auto Assign All">
                           <font>
                              <Font name="Segoe UI Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TableView fx:id="studentsTable" prefHeight="500.0" prefWidth="760.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                  <TableColumn fx:id="colDept" prefWidth="100.0" text="Dept" />
                  <TableColumn fx:id="colYear" prefWidth="50.0" text="Year" />
                  <TableColumn fx:id="colGender" prefWidth="75.0" text="Gender" />
                  <TableColumn fx:id="colBuilding" prefWidth="100.0" text="Building" />
                  <TableColumn fx:id="colRoom" prefWidth="100.0" text="Room" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
