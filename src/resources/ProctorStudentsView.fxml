<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProctorStudentsController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleBack" styleClass="secondary-button" text="&lt; Back" />
                  <Label styleClass="title-label" text="Student Allocation" style="-fx-font-size: 24px;" />
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleExportPDF" styleClass="action-button" text="Export PDF" />
                        <Button mnemonicParsing="false" onAction="#handleAutoAssign" styleClass="action-button" text="Auto Assign All" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            
            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="card" style="-fx-padding: 15;">
               <children>
                  <Label text="ðŸ” Search:" style="-fx-text-fill: #a0c4ff; -fx-font-size: 14px; -fx-font-weight: bold;" />
                  <TextField fx:id="searchField" promptText="Search by name, ID, department, or building..." prefWidth="400.0" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #90e0ef; -fx-background-radius: 8; -fx-padding: 8 12; -fx-font-size: 14px;" />
                  <Label fx:id="searchResultLabel" text="" style="-fx-text-fill: #4cd964; -fx-font-size: 12px;" />
               </children>
            </HBox>
                  <TableView fx:id="studentsTable" minHeight="400.0" prefHeight="500.0" prefWidth="760.0" styleClass="table-view" VBox.vgrow="ALWAYS" editable="true">
              <columns>
                <TableColumn fx:id="colName" prefWidth="140.0" text="Name" />
                <TableColumn fx:id="colId" prefWidth="90.0" text="ID" />
                  <TableColumn fx:id="colDept" prefWidth="100.0" text="Dept" />
                  <TableColumn fx:id="colYear" prefWidth="60.0" text="Year" />
                  <TableColumn fx:id="colGender" prefWidth="80.0" text="Gender" />
                  <TableColumn fx:id="colBuilding" prefWidth="110.0" text="Building" />
                  <TableColumn fx:id="colRoom" prefWidth="90.0" text="Room" />
                  <TableColumn fx:id="colActions" prefWidth="100.0" text="Actions" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
